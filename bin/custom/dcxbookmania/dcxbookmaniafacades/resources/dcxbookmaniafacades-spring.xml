	<!-- custom solr -->
	<alias name="dcxbookmaniaSearchResultVariantProductPopulator" alias="commerceSearchResultProductPopulator"/>
    <bean id="dcxbookmaniaSearchResultVariantProductPopulator"
          class="com.dcx.bookmania.facades.populators.DcxbookmaniaSearchResultVariantProductPopulator"
          parent="variantCommerceSearchResultProductPopulator">
    </bean>
    
    <alias name="dcxRating" alias="commerceSearchResultProductPopulator"/>
    <bean id="dcxRating"
          class="com.dcx.bookmania.facades.populators.DcxRating"
          parent="variantCommerceSearchResultProductPopulator">
    </bean>

<alias name="dcxbookmaniaRegisterFacadeImpl" alias="customerFacade" />
	<bean id="dcxbookmaniaRegisterFacadeImpl"
		class="com.dcx.bookmania.facades.register.impl.DcxbookmaniaRegisterFacadeImpl"
		parent="defaultCustomerFacade">
	</bean>
	
</beans>
